<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity"
        android:orientation="vertical">

    <TextView
            android:text="@string/exam_maker"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/titleView" android:textSize="36sp"
            android:gravity="center" android:layout_weight="0.8" android:typeface="monospace"
            android:textStyle="italic" android:background="#CE000000" android:textColor="#FFFFFF"
            android:layout_marginBottom="3dp"/>
    <Button
            android:text="@string/problem_sets"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/showBt" android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Colored" android:background="#25000000"
            android:textColor="#000000" android:textSize="36sp" android:typeface="normal"
            android:textStyle="bold" android:textAllCaps="false"
            android:layout_marginVertical="3dp"/>
    <Button
            android:text="@string/take_an_exam"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/testBT" android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="#000000" android:background="#40000000"
            android:typeface="normal" android:textSize="36sp" android:textStyle="bold" android:textAllCaps="false"
            android:layout_marginVertical="3dp"/>
    <Button
            android:text="@string/share"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/shareBT" android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="#000000" android:background="#25000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="36sp" android:typeface="normal"
            android:layout_marginVertical="3dp"/>
    <Button
            android:text="@string/exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/exitBt" android:layout_weight="1" tools:text="Exit"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="#000000" android:background="#40000000"
            android:typeface="normal" android:textSize="36sp" android:textStyle="bold" android:textAllCaps="false"
            android:layout_marginVertical="3dp"/>
</LinearLayout>