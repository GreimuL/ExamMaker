<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:background="@android:color/white">

    <TextView
            style="@style/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemTextView" android:text="@string/title"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/idView" android:layout_weight="1"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/viewProbBt" android:layout_weight="1"/>
</LinearLayout>